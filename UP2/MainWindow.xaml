<Window x:Class="UP2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UP2"
        mc:Ignorable="d"
        Title="Мой отель" 
        Height="450" MinHeight="262" MaxHeight="850"
        Width="1050" MinWidth="620" MaxWidth="1100">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="42*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Frame x:Name="MainFrame" Source="Pages/BookingPage.xaml" NavigationUIVisibility="Hidden" Grid.Column="1" Margin="0,50,0,0"/>
        <Button x:Name="ToBookings" Grid.Column="1" VerticalAlignment="Top" Margin="0,20,0,0" Content="Бронирования" Click="ToBookings_Click"/>
        <Button x:Name="ToClients"  Grid.Column="1" VerticalAlignment="Top" Margin="120,20,0,0" Content="Клиенты" Click="ToClients_Click"/>
    </Grid>

</Window>
